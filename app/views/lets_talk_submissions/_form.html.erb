<%= form_with(model: lets_talk_submission, class: "w-full max-w-lg") do |form| %>

  <div id="lets_talk_form_error_messages_holder"></div>

  <div class='flex flex-wrap -mx-3 mb-6'>
      <div class='w-full px-3'>
        <%= form.label :fullname, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <%= form.text_field :fullname, type: 'text', class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
      </div>
  </div>

  <div class='flex flex-wrap -mx-3 mb-6'>
      <div class='w-full px-3'>
        <%= form.label :email, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <%= form.text_field :email, type: 'email', class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
      </div>
  </div>

  <div class='flex flex-wrap -mx-3 mb-6'>
    <div class='w-full px-3'>
      <%= form.label :how_can_i_help, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.text_area :how_can_i_help, type: 'text', class: 'no-resize appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 h-48 resize-none' %>
    </div>
  </div>

  <div class='md:flex md:items-center'>
    <div class='md:w-1/3'>
      <%= form.submit 'Let\'s talk!', class:'shadow bg-sky-700 hover:bg-sky-800 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded' %>
    </div>
    <div class='md:w-2/3'></div>
  </div>
<% end %>
